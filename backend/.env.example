# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/lexflow

# Blockchain
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
ESCROW_CONTRACT_ADDRESS=0x...
JPYC_CONTRACT_ADDRESS=0x...
PRIVATE_KEY=your_wallet_private_key_here

# Security
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS設定（カンマ区切りで複数指定可能）
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://your-frontend.vercel.app

# Notification設定
# Email通知（SMTP） - 実際にメール送信する場合はUSE_SMTP=trueに設定
USE_SMTP=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=noreply@lexflow.example.com
SMTP_FROM_NAME=LexFlow Protocol

# Frontend URL (通知メール内のリンクに使用)
FRONTEND_URL=http://localhost:5173
